<div class="container float-left">
    <form>
        <div class="form-row">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Character Name" id="inputName">
                <div class="form-group col">
                    <div class="form-row">
                        <div class="form-group col">
                            <label for="inputClass"></label>
                            <input type="text" class="form-control" id="inputClass" placeholder="Class">
                        </div>
                        <div class="form-group col">
                            <label for="inputPlayer"></label>
                            <input type="text" class="form-control" id="inputPlayer" placeholder="Player">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label for="inputRace"></label>
                            <input type="text" class="form-control" id="inputRace" placeholder="Race">
                        </div>
                        <div class="form-group col">
                            <label for="inputLevel"></label>
                            <input type="text" class="form-control" id="inputLevel" placeholder="Level">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-4">
                    <label for="inputAC" class="text-light">Armor Class:</label>
                    <input type="text" class="form-control" id="inputAC" placeholder="">
                </div>
            </div>
            <div>

            </div>
            <div class="form-group col">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="inputCurrentHP" class="text-light">HP:</label>
                        <input type="text" class="form-control" id="inputCurrentHP" placeholder="">
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-3">
                <div class="form-row">
                    <label for="inputDex"></label>
                    <input type="text" class="form-control" id="inputStr" placeholder="Str">
                </div>
                <div class="form-row">
                    <label for="inputDex"></label>
                    <input type="text" class="form-control" id="inputDex" placeholder="Dex">
                </div>
                <div class="form-row">
                    <label for="inputCon"></label>
                    <input type="text" class="form-control" id="inputCon" placeholder="Con">
                </div>
                <div class="form-row">
                    <label for="inputInt"></label>
                    <input type="text" class="form-control" id="inputInt" placeholder="Int">
                </div>
                <div class="form-row">
                    <label for="inputWis"></label>
                    <input type="text" class="form-control" id="inputWis" placeholder="Wis">
                </div>
                <div class="form-row">
                    <label for="inputCha"></label>
                    <input type="text" class="form-control" id="inputCha" placeholder="Cha">
                </div>

                <div class="form-group">
                    <label for="inputAttacks" class="text-light">Attacks:</label>
                    <input type="text" class="form-control" id="inputAttacks" placeholder="">
                </div>
                <div class="form-group">
                    <label for="inputSpells" class="text-light">Spells:</label>
                    <input type="text" class="form-control" id="inputSpells" placeholder="">
                </div>
            </div>
        </div>
            <div class="form-row">
                <button type="button" id="createCharBtn" class="m-3 p-2 bg-dark text-light">Create Character</button>
            </div>
        
    </form>
</div>
<div class="row">
    <div class="col-8 card">
        <div class="pl-2 pt-2 pb-2 text-white bg-secondary card-top">
            <div class="card-title">
                <h3>Dice</h3>
            </div>
        </div>
        <div class="card-body bg-light">
            <div class="form-group col">
                <input type="text" class="form-control" id="inputRollAmt" placeholder="1-9">
                <select name="dice-rolled" id="diceRolled">
                    <option value="2">d2</option>
                    <option value="4">d4</option>
                    <option value="6">d6</option>
                    <option value="8">d8</option>
                    <option value="10">d10</option>
                    <option value="12">d12</option>
                    <option value="20">d20</option>
                    <option value="100">d100</option>
                </select>
                <button type="button" class="m-3 p-2 bg-dark text-light" id="rollButton">Roll</button>
            </div>
            <label for="rollOutput">Result:</label>
            <span style="text-decoration: underline" id="rollOutput"></span>
        </div>
    </div>
</div>
<script src="/js/dice.js"></script>
<script src="../../js/create.js"></script>